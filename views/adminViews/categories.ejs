<h1>Category Page</h1>
<a href="/admin/categories/add"><button class="btn btn-primary"> Add Category</button></a>
<table class="table">
<thead>
    <tr>
        <th scope="col">No.</th>
        <th scope="col">Category Name</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
</thead>
<tbody>
    <% let count=1 %>
        <% categories.forEach((item)=>{ %>


            <tr>
                <th scope="row">
                    <%= count %>
                </th>
                <td>
                    <%= item.category_name %>
                </td>
                <td>
                    <a href="/admin/categories/<%= item._id %>"
                        class="btn btn-primary">Edit</a>
                </td>
            </tr>
            <%  count++ %>
              <% }) %>
</tbody>
</table>