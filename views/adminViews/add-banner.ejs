<main class="fullScreen">
     <div class="container d-flex justify-content-center align-items-center">
       <div class="row col-6">
         <h1 class="text-center mt-3">Add New Banner</h1>
         <form action="/admin/banners/add" method="post" class="" enctype="multipart/form-data">
           <div class="mb-3">
             <label for="" class="form-label d-flex flex-column">Heading
               <input type="text" name="heading" class="form-control" />
             </label>
           </div>
           <div class="mb-3">
             <label for="" class="form-label  d-flex flex-column">Description
               <input type="text" name="description" class="form-control" />
             </label>
           </div>
           <div class="mb-3">
            <label for="" class="form-label  d-flex flex-column">Product Image
              <input  type="file" name="image" class="form-control" />
            </label>
          </div>
           <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
           </div>
         </form>
       </div>
     </div>
   </main>